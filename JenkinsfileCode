pipeline {
    agent any
    stages {
        stage('Submit Stack') {
            steps {
                withCredentials([aws(accessKeyVariable:'AWS_ACCESS_KEY_ID', credentialsId:'aws-cresds1', secretKeyVariable:'AWS_SECRET_ACCESS_KEY')])
                {
                sh  '''
                    pwd template.yml
                    aws s3 cp template.yml s3://a-tech-bucket/temp/template.yml
                    cd Code/ ; zip -r ../index.zip . *
                    pwd index.zip
                    cd ..
                    aws s3 cp /Code/index.zip s3://a-tech-bucket/temp/index.zip
                    '''
                }
              }
             }
           }
         }